<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#BBDEFB"
    android:orientation="vertical">

    <TextView
        android:id="@+id/name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Hà Nội"
        android:textColor="#212121"
        android:textSize="45dp" />

    <ImageView
        android:id="@+id/main_img"
        android:layout_width="50dp"
        android:layout_height="30dp"
        android:layout_below="@id/name"

        android:layout_marginTop="15dp"
        android:src="@drawable/weather" />

    <TextView
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/name"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@id/main_img"
        android:text="no data"
        android:textColor="#E91E63"
        android:textSize="30dp" />

    <ImageView
        android:id="@+id/des_img"
        android:layout_width="50dp"
        android:layout_height="30dp"
        android:layout_below="@id/main"

        android:layout_marginTop="15dp"
        android:src="@drawable/weather" />

    <TextView
        android:id="@+id/description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/main"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@id/des_img"
        android:text="no data"
        android:textColor="#E91E63"
        android:textSize="30dp"

        />

    <ImageView
        android:id="@+id/temp_img"
        android:layout_width="50dp"
        android:layout_height="30dp"
        android:layout_below="@id/description"

        android:layout_marginTop="15dp"
        android:src="@drawable/temper" />

    <TextView
        android:id="@+id/temp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/description"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@id/temp_img"
        android:text="no data"

        android:textColor="#E91E63"
        android:textSize="30dp"

        />
    <ImageView
        android:layout_width="50dp"
        android:layout_height="30dp"
        android:id="@+id/speed_img"
        android:layout_marginTop="15dp"

        android:src="@drawable/weath"
        android:layout_below="@id/temp"
        />

    <TextView
        android:id="@+id/speed"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_below="@id/temp"
        android:text="no data"
        android:layout_toRightOf="@id/speed_img"
        android:textColor="#E91E63"
        android:textSize="30dp"

        />

</RelativeLayout>